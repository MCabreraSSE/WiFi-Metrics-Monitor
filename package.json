{
  "name": "wifi-metrics-monitor-pro",
  "version": "1.0.0",
  "description": "Herramienta profesional de an√°lisis WiFi en tiempo real",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": ["wifi", "network", "monitoring", "rf"],
  "author": "RF Specialist",
  "license": "MIT",
  "dependencies": {
    "node-wifi": "^2.0.15",
    "wifi-control": "^2.0.1"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.wifimonitor.pro",
    "productName": "WiFi Metrics Monitor Pro",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
